	<content><![CDATA[
void ${1:ScreenName}::updateCaption()
{
	QString caption = "${2:Screen Title}";
	if (zsql::isInt(_model.getRecord()))
	{
		caption += " (" + ${3:uniqueName} + ")";
	}
	ZScreen::setCaption(caption);
}
]]></content>
