<snippet>
	<content><![CDATA[
SELECT 	datname,
		procpid,
		application_name,
		current_timestamp-xact_start AS xact_age,
		current_timestamp-query_start AS qry_age,
		current_query 
FROM pg_stat_activity 
WHERE current_query!='<IDLE>' 
ORDER BY xact_start;
]]></content>
	<tabTrigger>current-activity</tabTrigger>
	<scope>source.sql</scope>
</snippet>
